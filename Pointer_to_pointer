#include <iostream>

using namespace std;

int main()
{
    int arr[]={10,20,30};
    cout<<*arr<<endl;
    
    //method 1:
    
    int *ptr=arr;
    for(int i=0;i<3;i++){
        cout<<*ptr<<" " ;
        ptr++;
    }
    
    // method 2:
    for(int i=0;i<3;i++){
        cout<<*(arr+i)<<" " ;
    }

    return 0;
}
